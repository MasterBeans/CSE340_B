<main>
  
    <div class="management-card">
        <h1><%= title %></h1>
    
        <!-- Flash message display -->
        <%- messages() %>

        <!-- Display server-side validation errors -->
        <% if (errors) { %>
            <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
        </ul>
        <% } %>

        <form action="/inv/add-inventory" method="POST">
            <div class="form-row">
            <label for="classification_id">Classification</label>
            <%- classificationList %>
            </div>
            <div class="form-row">
            <label for="inv_make">Make</label>
            <input type="text" name="inv_make" required value="<%= locals.inv_make %>">
        </div>
        <div class="form-row">
            <label for="inv_model">Model</label>
            <input type="text" name="inv_model" required value="<%= locals.inv_model %>">
        </div>
        <div class="form-row">
            <label for="inv_description">Description</label>
            <textarea name="inv_description" rows="10" cols="30" required value="<%= locals.inv_description %>"></textarea>
        </div>
        <div class="form-row">
            <label for="inv_image">Image Path</label>
            <input type="text" name="inv_image" required value="<%= locals.inv_image %>">
        </div>
        <div class="form-row">
            <label for="inv_thumbnail">Thumbnail Path</label>
            <input type="text" name="inv_thumbnail" required value="<%= locals.inv_thumbnail %>">
        </div>
        <div class="form-row">
            <label for="inv_price">Price</label>
            <input type="number" name="inv_price" required value="<%= locals.inv_price %>">
        </div>
        <div class="form-row">
            <label for="inv_year">Year</label>
            <input type="number" name="inv_year" required value="<%= locals.inv_year %>">
        </div>
        <div class="form-row">
            <label for="inv_miles">Miles</label>
            <input type="number" name="inv_miles" required value="<%= locals.inv_miles %>">
        </div>
        <div class="form-row">
            <label for="inv_color">Color</label>
            <input type="text" name="inv_color" required value="<%= locals.inv_color %>">
        </div>
            <button type="submit">Add Inventory</button>
        </form>
    </div>
</main>