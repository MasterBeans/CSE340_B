<main>
  
    <div class="management-card">
        <h1><%= title %></h1>
    
        <!-- Flash message display -->
        <%- messages() %>

        <!-- Display server-side validation errors -->
        <% if (errors) { %>
            <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
        </ul>
        <% } %>

        <form action="/inv/add-classification" method="POST">
            <label for="classification_name">Classification Name</label>
            <input type="text" name="classification_name" id="classification_name" required pattern="^[a-zA-Z0-9]+$" title="No spaces or special characters">
            <span class="classification-hint">New classification name cannot contain a space or special character.</span> 
            <button type="submit">Add Classification</button>
        </form>
    </div>
</main>